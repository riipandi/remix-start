{
    "name": "remix-start",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "build": "remix build",
        "dev": "docker compose up -d && remix dev",
        "start": "remix-serve ./build/index.js",
        "format": "prettier --write . --log-level warn",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . --fix",
        "docker:build": "docker build -f Dockerfile . -t $npm_package_name:latest -t $npm_package_name:$npm_package_version",
        "docker:run": "docker run --rm -it -p 3000:3000 --env-file .env --name $npm_package_name $npm_package_name:latest",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "cleanup": "docker compose down --remove-orphans --volumes",
        "preinstall": "pnpm dlx only-allow pnpm",
        "typecheck": "tsc -b"
    },
    "dependencies": {
        "@remix-run/css-bundle": "^2.5.1",
        "@remix-run/node": "^2.5.1",
        "@remix-run/react": "^2.5.1",
        "@remix-run/serve": "^2.5.1",
        "clsx": "^2.1.0",
        "isbot": "^4.4.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^2.2.1",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@remix-run/dev": "^2.5.1",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@types/node": "^20.11.9",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-tailwindcss": "^3.14.1",
        "husky": "^9.0.6",
        "lint-staged": "^15.2.0",
        "npm-check-updates": "^16.14.14",
        "prettier": "^3.2.4",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,css,scss,md,ts,tsx,html}": [
            "pnpm format"
        ]
    }
}
