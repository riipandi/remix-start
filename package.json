{
    "name": "remix-start",
    "version": "0.1.0",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "build": "remix vite:build",
        "dev": "remix vite:dev",
        "start": "remix-serve ./build/server/index.js",
        "dev:storybook": "storybook dev -p 6006 --no-open",
        "build:storybook": "storybook build -o storybook-static",
        "format": "prettier --write . --log-level warn",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . --fix",
        "docker:build": "docker build -f Dockerfile . -t $npm_package_name:latest -t $npm_package_name:$npm_package_version",
        "docker:run": "docker run --rm -it -p 3000:3000 --env-file .env --name $npm_package_name $npm_package_name:latest",
        "docker:shell": "docker run --rm -it -p 3000:3000 --env-file .env --entrypoint /bin/sh $npm_package_name:$npm_package_version",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "cleanup": "docker compose down --remove-orphans --volumes",
        "preinstall": "pnpm dlx only-allow pnpm",
        "pre-dev": "docker compose up -d",
        "pre-commit": "sh .husky/pre-commit",
        "prepare": "husky || true",
        "test": "vitest --run",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "e2e-test:ui": "playwright test --ui",
        "e2e-test:desktop": "playwright test --headed --project Chromium",
        "e2e-test:mobile": "playwright test --headed --project 'Mobile Chrome'",
        "e2e-test:install": "playwright install-deps",
        "e2e-test:report": "playwright show-report",
        "typecheck": "tsc -b"
    },
    "dependencies": {
        "@remix-run/css-bundle": "^2.7.2",
        "@remix-run/node": "^2.7.2",
        "@remix-run/react": "^2.7.2",
        "@remix-run/serve": "^2.7.2",
        "clsx": "^2.1.0",
        "isbot": "^5.1.0",
        "react-dom": "^18.2.0",
        "react": "^18.2.0",
        "remix-flat-routes": "^0.6.4",
        "tailwind-merge": "^2.2.1",
        "undici": "^6.6.2"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^1.1.12",
        "@playwright/test": "^1.41.2",
        "@remix-run/dev": "^2.7.2",
        "@remix-run/testing": "^2.7.2",
        "@storybook/addon-essentials": "8.0.0-beta.5",
        "@storybook/addon-interactions": "8.0.0-beta.5",
        "@storybook/addon-links": "8.0.0-beta.5",
        "@storybook/blocks": "8.0.0-beta.5",
        "@storybook/react-vite": "8.0.0-beta.5",
        "@storybook/react": "8.0.0-beta.5",
        "@storybook/test": "8.0.0-beta.5",
        "@storybook/theming": "^7.6.17",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "@types/react-dom": "^18.2.19",
        "@types/react": "^18.2.60",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@vitest/coverage-v8": "^1.3.1",
        "@vitest/ui": "^1.3.1",
        "autoprefixer": "^10.4.17",
        "dotenv": "^16.4.5",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-storybook": "^0.8.0",
        "eslint-plugin-tailwindcss": "^3.14.3",
        "eslint": "^8.57.0",
        "happy-dom": "^13.6.2",
        "husky": "^9.0.11",
        "npm-check-updates": "^16.14.15",
        "playwright": "^1.41.2",
        "postcss": "^8.4.35",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "prettier": "^3.2.5",
        "rollup-plugin-visualizer": "^5.12.0",
        "storybook": "8.0.0-beta.5",
        "tailwind-variants": "^0.2.0",
        "tailwindcss-animate": "^1.0.7",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.1.6",
        "vite-tsconfig-paths": "^4.3.1",
        "vite": "^5.1.4",
        "vitest": "^1.3.1"
    },
    "engines": {
        "node": ">=18.17.1"
    },
    "eslintIgnore": [
        "/node_modules",
        "/build",
        "/public/build"
    ]
}
