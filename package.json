{
    "name": "remix-start",
    "version": "0.1.0",
    "license": "MIT",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "build": "remix build",
        "dev": "remix dev",
        "start": "remix-serve ./build/index.js",
        "format": "prettier --write . --log-level warn",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . --fix",
        "docker:build": "docker build -f Dockerfile . -t $npm_package_name:latest -t $npm_package_name:$npm_package_version",
        "docker:run": "docker run --rm -it -p 3000:3000 --env-file .env --name $npm_package_name $npm_package_name:latest",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "cleanup": "docker compose down --remove-orphans --volumes",
        "preinstall": "pnpm dlx only-allow pnpm",
        "pre-dev": "docker compose up -d",
        "pre-commit": "sh .husky/pre-commit",
        "prepare": "husky || true",
        "test": "vitest --run",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "e2e-test:ui": "playwright test --ui",
        "e2e-test:desktop": "playwright test --headed --project Chromium",
        "e2e-test:mobile": "playwright test --headed --project 'Mobile Chrome'",
        "e2e-test:install": "playwright install-deps",
        "e2e-test:report": "playwright show-report",
        "typecheck": "tsc -b"
    },
    "dependencies": {
        "@remix-run/css-bundle": "^2.6.0",
        "@remix-run/node": "^2.6.0",
        "@remix-run/react": "^2.6.0",
        "@remix-run/serve": "^2.6.0",
        "clsx": "^2.1.0",
        "dotenv": "^16.4.1",
        "isbot": "^4.4.0",
        "react-dom": "^18.2.0",
        "react": "^18.2.0",
        "tailwind-merge": "^2.2.1",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@playwright/test": "^1.41.2",
        "@remix-run/dev": "^2.6.0",
        "@remix-run/testing": "^2.6.0",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.17",
        "@types/react-dom": "^18.2.19",
        "@types/react": "^18.2.55",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@vitest/coverage-v8": "^1.2.2",
        "@vitest/ui": "^1.2.2",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-simple-import-sort": "^11.0.0",
        "eslint-plugin-tailwindcss": "^3.14.2",
        "eslint": "^8.56.0",
        "husky": "^9.0.10",
        "jsdom": "^24.0.0",
        "npm-check-updates": "^16.14.14",
        "playwright": "^1.41.2",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "prettier": "^3.2.5",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.1.6",
        "vitest": "^1.2.2"
    },
    "engines": {
        "node": ">=18.17.1"
    },
    "eslintIgnore": [
        "/node_modules",
        "/build",
        "/public/build"
    ]
}
