{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "composite": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ES2023"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "rootDirs": [".", "./.react-router/types"],
        "strict": true,
        "target": "ES2023",
        "tsBuildInfoFile": "./.temp/tsconfig.app.tsbuildinfo",
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "#/*": ["./app/*"],
            "~/*": ["./public/*"]
        }
    },
    "include": [
        ".react-router/types/**/*",
        "app/**/*",
        "app/**/.server/**/*",
        "app/**/.client/**/*",
        "server/**/*"
    ]
}
